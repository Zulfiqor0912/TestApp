<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5104E0"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="anim.json"
        app:lottie_loop="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/specialty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matemetika"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/questionLiner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@raw/lilit"
        android:textColor="@color/white"
        android:textSize="26sp"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="@+id/btnSkip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnSkip" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/questionLiner"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@drawable/question"
        app:layout_constraintBottom_toTopOf="@id/v1"
        app:layout_constraintEnd_toEndOf="@id/v1"
        app:layout_constraintStart_toStartOf="@id/v1"
        app:layout_constraintTop_toBottomOf="@id/btnBack">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@raw/lilit"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:padding="10dp"
            android:text="2 sonining tub buluvchilari soni nechta"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/questionLiner"
            app:layout_constraintEnd_toEndOf="@id/questionLiner"
            app:layout_constraintStart_toStartOf="@id/questionLiner"
            app:layout_constraintTop_toTopOf="@+id/questionLiner" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/question"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toTopOf="@id/v2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/v1"
            app:layout_constraintStart_toStartOf="@+id/v1"
            app:layout_constraintTop_toTopOf="@id/v1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textVariant1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:textColor="@color/white"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@id/v1"
            app:layout_constraintEnd_toEndOf="@id/v1"
            app:layout_constraintStart_toStartOf="@id/v1"
            app:layout_constraintTop_toTopOf="@+id/radio1"
            tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry." />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/question"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toTopOf="@id/v3"
        app:layout_constraintEnd_toEndOf="@+id/v1"
        app:layout_constraintStart_toStartOf="@+id/v1">

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/v2"
            app:layout_constraintStart_toStartOf="@+id/v2"
            app:layout_constraintTop_toTopOf="@id/v2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textVariant2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:textColor="@color/white"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@id/v2"
            app:layout_constraintEnd_toEndOf="@id/v2"
            app:layout_constraintStart_toStartOf="@id/v2"
            app:layout_constraintTop_toTopOf="@+id/radio2"
            tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry." />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/question"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toTopOf="@+id/v4"
        app:layout_constraintEnd_toEndOf="@+id/v2"
        app:layout_constraintStart_toStartOf="@+id/v2">

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/v3"
            app:layout_constraintStart_toStartOf="@+id/v3"
            app:layout_constraintTop_toTopOf="@id/v3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textVariant3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:textColor="@color/white"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@id/v3"
            app:layout_constraintEnd_toEndOf="@id/v3"
            app:layout_constraintStart_toStartOf="@id/v3"
            app:layout_constraintTop_toTopOf="@+id/radio3"
            tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry." />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/v4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/question"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnNext"
        app:layout_constraintEnd_toEndOf="@id/v3"
        app:layout_constraintStart_toStartOf="@+id/v3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95">

        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/v4"
            app:layout_constraintStart_toStartOf="@+id/v4"
            app:layout_constraintTop_toTopOf="@id/v4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textVariant4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:textColor="@color/white"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@id/v4"
            app:layout_constraintEnd_toEndOf="@id/v4"
            app:layout_constraintStart_toStartOf="@id/v4"
            app:layout_constraintTop_toTopOf="@+id/radio4"
            tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry." />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_next"
        android:padding="5dp"
        android:text="next"
        android:fontFamily="@raw/lilit"
        android:textAllCaps="true"
        android:textColor="#ADFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/v4"
        app:layout_constraintStart_toStartOf="@id/v4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSkip"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:text="@string/skip"
        android:fontFamily="@raw/lilit"
        android:textColor="#B4B1B7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" / 15"
        android:fontFamily="@raw/lilit"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/questionLiner"
        app:layout_constraintEnd_toEndOf="@id/questionLiner"
        app:layout_constraintTop_toBottomOf="@id/btnSkip" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@raw/lilit"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@id/questionLiner"
        app:layout_constraintEnd_toStartOf="@id/tests"
        app:layout_constraintTop_toBottomOf="@id/btnSkip" />


</androidx.constraintlayout.widget.ConstraintLayout>