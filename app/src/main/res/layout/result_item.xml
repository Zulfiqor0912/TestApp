<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="#5104E0">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/resultTestSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@raw/lilit"
        android:text=" / 15"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/questionLinerBack"
        app:layout_constraintEnd_toEndOf="@+id/questionLinerBack"
        android:layout_marginBottom="8dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/resultCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@raw/lilit"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/resultTestSize"
        app:layout_constraintEnd_toStartOf="@id/resultTestSize" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/questionLinerBack"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginHorizontal="42dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/resulTextQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@raw/lilit"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:padding="10dp"
            android:text="2 sonining tub buluvchilari soni nechta"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/questionLinerBack"
            app:layout_constraintEnd_toEndOf="@id/questionLinerBack"
            app:layout_constraintStart_toStartOf="@id/questionLinerBack"
            app:layout_constraintTop_toTopOf="@+id/questionLinerBack" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/yourAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sizning javobingiz"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/resultAnswerLiner"
        app:layout_constraintTop_toBottomOf="@+id/questionLinerBack" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/resultAnswerLiner"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="38dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourAnswer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To'g'ri javob"
        android:textSize="16dp"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/resultAnswerLiner"
        app:layout_constraintTop_toBottomOf="@+id/resultAnswerLiner" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/trueLiner"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="38dp"
        android:background="@drawable/question"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView"
        app:layout_constraintVertical_bias="0" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/trueAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/trueLiner"
        app:layout_constraintEnd_toEndOf="@id/trueLiner"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@id/trueLiner"
        app:layout_constraintTop_toTopOf="@id/trueLiner" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/resultAnswerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/resultAnswerLiner"
        app:layout_constraintEnd_toEndOf="@+id/resultAnswerLiner"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@id/resultAnswerLiner"
        app:layout_constraintTop_toTopOf="@id/resultAnswerLiner" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/resultTrueOrFalse"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/resultAnswerLiner"
        app:layout_constraintEnd_toEndOf="@+id/resultAnswerLiner"
        app:layout_constraintTop_toTopOf="@+id/resultAnswerLiner" />

</androidx.constraintlayout.widget.ConstraintLayout>